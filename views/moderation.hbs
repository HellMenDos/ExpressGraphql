<div class="card">
    <div class="card-header">{{ title }}</div>
    <div class="card-body">
        <table class="table table-striped table-responsive dataTable">
            <thead>
            <th>ID</th>
            <th>UID</th>
            <th>Картинка</th>
            <th>Заголовок</th>
            <th>Дата</th>
            <th>Действия</th>
            </thead>
            <tbody>
            {{#each data}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/admin/user/{{uid}}">{{uid}}</a></td>
                    <td><a href="/files/images/{{path}}" target="_blank">
                    {{#if video}}
                    
                    <video src="/files/videos/{{path}}" controls style='width: 300px'></video>
                    {{else}}
                    <img src="/files/images/{{path}}" width="126px">
                    {{/if}}         
                    </a>
                     </td>
                    <td>{{title}}</td>
                    <td>{{dateFormat date "D.M.Y, H:mm"}}</td>
                    <td>
                        <a href="/admin/images/moderation-confirm/{{id}}" class="btn btn-success btn-sm"><i class="fa fa-check"></i>Одобрить</a>
                        <br/><br/>
                        <a href="/admin/images/moderation-delete/{{id}}" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Удалить</a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{{pagination}}}
