{{#if er}}
<div class="alert alert-danger" role="alert">
  {{er}}
</div>
{{/if}}
<div class="card">
    <div class="card-header">{{ title }}</div>
    <button class="btn btn-success btn-block mt-2 mb-2" data-toggle="modal" data-target="#exampleModal">Добавить нового пользователя</button>
    <div class="card-body">
        <table class="table table-striped table-responsive dataTable">
            <thead>
            <th>ID</th>
            <th>Email</th>
            <th>Имя</th>
            <th>Аватар</th>
            <th>Дата регистрации</th>
            <th>oAuth</th>
            <th>Рейтинг</th>
            <th>Действия</th>
            </thead>
            <tbody>
            {{#each data}}
                <tr>
                    <td><a href="/admin/user/{{id}}">{{id}}</a></td>
                    <td>{{email}}</td>
                    <td>{{name}}</td>
                    <td>{{#if avatar}}<img src="/files/avatar/{{avatar}}" width="46px">{{/if}}</td>
                    <td>{{dateFormat regDate "D.M.Y, H:mm"}}</td>
                    <td>{{googleUserId}}</td>
                    <td>{{rating}}</td>
                    <td><a href="" class="btn btn-info btn-sm" data-toggle="modal" data-target="#exampleModal{{id}}"><i class="fa fa-pencil"></i></a>
                        <a href="/admin/users-list/trash/{{id}}" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a></td>
                </tr>
                
<div class="modal fade" id="exampleModal{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Редактирование пользователя</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
                <form method="POST"  action="/admin/users-list/change" >
                    <input type="text" name="name" class="form-control" placeholder="Имя" value="{{name}}" style="margin-top: 10px;">
                    <input type="email" name="email" class="form-control" placeholder="Почта" value="{{email}}"  style="margin-top: 10px;">
                    <input type="text" name="rating" class="form-control" placeholder="Рейтиг" value="{{rating}}"  style="margin-top: 10px;">
                    <input type="text" name="descr" class="form-control" placeholder="Описание" value="{{descr}}"  style="margin-top: 10px;">
                    <input type="hidden" name="iduser" class="form-control" placeholder="Рейтиг" value="{{id}}"  style="margin-top: 10px;">
                    <br/>
                    <input type="submit" class="btn btn-primary btn-block" value="Сохранить">
                </form>
      </div>
    </div>
  </div>
</div>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{{pagination}}}

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Добавление нового польщователя</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
                <form method="POST"  action="/admin/users-list" >
                    <input type="text" name="name" class="form-control" placeholder="Имя" style="margin-top: 10px;">
                    <input type="email" name="email" class="form-control" placeholder="Почта"  style="margin-top: 10px;">
                    <input type="text" name="password" class="form-control" placeholder="Пароль" style="margin-top: 10px;">
                    <input type="text" name="descr" class="form-control" placeholder="Описание" style="margin-top: 10px;">
                    <input type="text" name="idform" class="form-control" placeholder="Id пользователя" style="margin-top: 10px;">
                    <br/>
                    <input type="submit" class="btn btn-primary btn-block" value="Создать">
                </form>
      </div>
    </div>
  </div>
</div>