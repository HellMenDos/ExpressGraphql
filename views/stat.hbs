<h1>Statistic</h1>

<div class="row">
    <div class="col-md-12">
        <div class="card" style="padding: 20px;">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-now" role="tab" aria-controls="pills-home" aria-selected="true">Сегодня</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-yestarday" role="tab" aria-controls="pills-profile" aria-selected="false">Вчера</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-7deys" role="tab" aria-controls="pills-contact" aria-selected="false">7 дней</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-30deys" role="tab" aria-controls="pills-contact" aria-selected="false">30 дней</a>
                </li>
            </ul>
                <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-now" role="tabpanel" aria-labelledby="pills-now-tab">
                     {{#each now}}
                        <div style="display: flex; width: 100%; justify-content: space-between;">
                            <p>{{id}}</p>
                            <p>{{name}}</p>
                            <p>{{count}}</p>  
                        </div>
                     {{/each}} 
                </div>

                <div class="tab-pane fade" id="pills-yestarday" role="tabpanel" aria-labelledby="pills-yestarday-tab">
                     {{#each yestarday}}
                        <div style="display: flex; width: 100%; justify-content: space-between;">
                            <p>{{id}}</p>
                            <p>{{name}}</p>
                            <p>{{count}}</p>  
                        </div>
                     {{/each}} 
                </div>

                <div class="tab-pane fade" id="pills-7deys" role="tabpanel" aria-labelledby="pills-7deys-tab">
                     {{#each week}}
                        <div style="display: flex; width: 100%; justify-content: space-between;">
                            <p>{{id}}</p>
                            <p>{{name}}</p>
                            <p>{{count}}</p>  
                        </div>
                     {{/each}} 
                </div>

                
                <div class="tab-pane fade" id="pills-30deys" role="tabpanel" aria-labelledby="pills-30deys-tab">
                     {{#each mounth}}
                        <div style="display: flex; width: 100%; justify-content: space-between;">
                            <p>{{id}}</p>
                            <p>{{name}}</p>
                            <p>{{count}}</p>  
                        </div>
                     {{/each}}   
                </div>

                </div>
        </div>
    </div>
</div>
